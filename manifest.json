{
  "manifest_version": 2,

  "name": "Tab Grab Paste",
  "description": "An extention for quckly grabbing the tab title, URLs and a snapshot of the page",
  "version": "0.0.0.1",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "browser_action": {
    "default_icon":{
      "128":"128.png",
      "48": "48.png",
      "16": "16.png"

    }
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "notifications"
  ],
  "web_accessible_resources": [
    "128.png"
  ],
  "background":{
    "scripts": ["copyscript.js"]
  }
}
